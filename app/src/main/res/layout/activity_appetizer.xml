<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppetizerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4">

            <!-- Separate line -->
            <androidx.cardview.widget.CardView
                android:layout_width="130px"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                app:cardCornerRadius="7dp"
                app:cardElevation="7dp"
                android:layout_margin="@dimen/all"
                android:layout_marginBottom="@dimen/top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:padding="@dimen/all"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_title"
                        android:text="@string/appetizer"
                        android:gravity="center_horizontal" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Grid -->
            <androidx.cardview.widget.CardView
                android:layout_width="130px"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                app:cardCornerRadius="7dp"
                app:cardElevation="7dp"
                android:layout_margin="@dimen/all"
                android:layout_marginBottom="@dimen/top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/salad01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/salad_01"/>

                    <TextView
                        android:layout_marginLeft="@dimen/all"
                        android:layout_marginTop="@dimen/all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_body"
                        android:text="Salade Fruit"/>

                    <TextView
                        android:paddingLeft="@dimen/all"
                        android:paddingTop="@dimen/all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_body"
                        android:text="1500 FCFA"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="130px"
                android:layout_height="180dp"
